<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dialog_margin_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/image_to_pdf_bg_color" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:text="@string/decrypt" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
        <TextView android:textSize="14sp" android:textColor="@color/enter_file_name_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:text="@string/input_password" android:fontFamily="@font/lato_regular" android:textFontWeight="700"/>
        <androidx.appcompat.widget.AppCompatEditText android:textSize="14sp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/eTextPassword" android:focusable="true" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp" android:hint="@string/enter_password" android:inputType="textPassword" android:fontFamily="@font/lato_regular" android:textFontWeight="700" app:backgroundTint="@color/image_to_pdf_color_red"/>
        <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="12dp">
            <TextView android:textSize="16sp" android:textColor="@color/image_to_pdf_color_red" android:id="@+id/txtCancel" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:text="@string/cancel_text" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
            <TextView android:textSize="16sp" android:textColor="@color/image_to_pdf_color_red" android:id="@+id/txtOpenFile" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/open_file" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
