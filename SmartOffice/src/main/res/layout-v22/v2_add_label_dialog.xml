<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:background="@color/image_to_pdf_bg_color" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:text="@string/add_new_tag" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/enter_file_name_color" android:id="@+id/txtMsg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:text="@string/enter_tag_name" android:fontFamily="@font/lato_regular" android:textFontWeight="700"/>
        <androidx.appcompat.widget.AppCompatEditText android:textSize="16sp" android:textColor="@color/enter_file_name_color" android:gravity="center_vertical" android:id="@+id/eTextTagName" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp" android:hint="Enter Name" android:fontFamily="@font/lato_regular" android:textFontWeight="700" app:backgroundTint="@color/add_more_txt_color"/>
        <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="12dp">
            <TextView android:textSize="16sp" android:textColor="@color/add_more_txt_color" android:id="@+id/txtCancel" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:text="@string/cancel_text" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
            <TextView android:textSize="16sp" android:textColor="@color/add_more_txt_color" android:id="@+id/txtDone" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/done" android:fontFamily="@font/lato_regular" android:textFontWeight="600"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
