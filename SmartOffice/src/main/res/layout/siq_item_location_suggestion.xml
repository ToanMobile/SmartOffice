<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/siq_location_sug_header" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:id="@+id/siq_location_sug_header_text" android:text="@string/livechat.widgets.location.suggestions" style="@style/SalesIQ.Style.location_suggestions_text"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/siq_location_sug_place_layout" android:background="?android:attr/selectableItemBackground" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/siq_location_sug_image_layout" android:background="@drawable/salesiq_circle_bg" android:layout_width="40dp" android:layout_height="40dp">
            <ImageView android:id="@+id/siq_location_sug_image" android:layout_width="26dp" android:layout_height="26dp" android:layout_centerInParent="true" android:layout_centerVertical="true" app:srcCompat="@drawable/salesiq_vector_location"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginStart="16dp">
            <TextView android:id="@+id/siq_location_sug_place_title" style="@style/SalesIQ.Style.location_suggestion_title"/>
            <TextView android:id="@+id/siq_location_sug_place_address" style="@style/SalesIQ.Style.location_suggestion_subtitle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
