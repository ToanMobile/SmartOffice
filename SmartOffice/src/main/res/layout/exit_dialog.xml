<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/nativeAdContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                <include layout="@layout/native_template_with_shimmer"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/ll_exit_control" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textColor="#ff000000" android:gravity="center_horizontal" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="20dp" android:layout_marginRight="4dp" android:layout_marginBottom="20dp" android:text="Are you sure you wish to exit?"/>
                <LinearLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/exit_controls" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/btn_cancel" android:background="@color/color_dialog_gray" android:clickable="true" android:layout_width="100dp" android:layout_height="60dp" android:text="No" android:layout_weight="1"/>
                    <TextView android:textStyle="normal" android:textColor="@color/black" android:gravity="center" android:id="@+id/btn_disconnect" android:background="@color/white" android:clickable="true" android:layout_width="100dp" android:layout_height="60dp" android:layout_marginLeft="3dp" android:text="Yes" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
