<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/constraintLayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/section_app_toolbar"/>
    <include android:id="@+id/msg" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/app_bar" layout="@layout/layout_msg"/>
    <FrameLayout android:id="@+id/toolsLayout" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1"/>
    <include android:visibility="gone" layout="@layout/layout_pro_card_banner"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/viewGreyLine" android:background="@color/grey" android:layout_width="match_parent" android:layout_height="4dp"/>
        <include android:id="@+id/bottomAdView" layout="@layout/layout_banner_control"/>
        <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>
