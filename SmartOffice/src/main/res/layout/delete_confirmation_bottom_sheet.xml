<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bottom_sheet_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
        <View android:layout_gravity="center" android:id="@+id/viewConfirmation" android:background="@drawable/view_bg" android:layout_width="65dp" android:layout_height="6dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/image_to_pdf_bg_color" android:layout_gravity="center" android:id="@+id/txtTitle" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/are_you_sure_delete_msg" android:fontFamily="@font/lato_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/image_to_pdf_bg_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/txtDesc" android:padding="5dp" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/selected_delete_msg" android:fontFamily="@font/lato_regular"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <androidx.appcompat.widget.AppCompatButton android:textSize="16sp" android:textColor="@color/image_to_pdf_color_red" android:gravity="center" android:id="@+id/btnNo" android:background="@drawable/btn_view_bg" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginRight="20dp" android:text="@string/no" android:layout_weight="0.33" android:textAllCaps="false" android:fontFamily="@font/lato_regular"/>
            <androidx.appcompat.widget.AppCompatButton android:textSize="16sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/btnDelete" android:background="@drawable/btn_choosee_file_bg" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginLeft="20dp" android:text="@string/delete" android:layout_weight="0.33" android:textAllCaps="false" android:fontFamily="@font/lato_regular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
