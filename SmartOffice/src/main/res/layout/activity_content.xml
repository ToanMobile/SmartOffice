<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer_layout" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout android:id="@+id/pro_appbar" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.Toolbar android:id="@+id/pro_toolbar" android:background="@color/white" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="end" android:id="@+id/profile_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/ic_baseline_circle_24" android:layout_marginEnd="20dp"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/pro_appbar">
            <androidx.constraintlayout.widget.ConstraintLayout android:paddingBottom="100dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <include android:id="@+id/storage" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0" layout="@layout/cloud_section_storage_used"/>
                <TextView android:textSize="20sp" android:id="@+id/folder_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="Folders" android:layout_marginStart="15dp" app:layout_constraintStart_toStartOf="@+id/storage" app:layout_constraintTop_toBottomOf="@+id/storage"/>
                <TextView android:textColor="#0f75bc" android:id="@+id/create_folder_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+ Create" android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/folder_tv"/>
                <com.facebook.shimmer.ShimmerFrameLayout android:id="@+id/shimmer_folder_rv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="@+id/folder_tv" app:layout_constraintTop_toBottomOf="@+id/folder_tv">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <include layout="@layout/shimmer_placeholder_folder_item_file"/>
                        <include layout="@layout/shimmer_placeholder_folder_item_file"/>
                        <include layout="@layout/shimmer_placeholder_folder_item_file"/>
                        <include layout="@layout/shimmer_placeholder_folder_item_file"/>
                        <include layout="@layout/shimmer_placeholder_folder_item_file"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/folder_rv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="@+id/folder_tv" app:layout_constraintTop_toBottomOf="@+id/folder_tv"/>
                <androidx.constraintlayout.widget.Barrier android:id="@+id/barrier" android:layout_width="wrap_content" android:layout_height="wrap_content" app:barrierDirection="3" app:constraint_referenced_ids="folder_rv,shimmer_folder_rv"/>
                <ImageView android:id="@+id/no_folder_img" android:visibility="gone" android:layout_width="0dp" android:layout_height="120dp" android:src="@drawable/ic_wireframe_07" app:layout_constraintBottom_toBottomOf="@+id/barrier" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="@+id/folder_tv" app:layout_constraintTop_toBottomOf="@+id/folder_tv"/>
                <com.google.android.material.button.MaterialButton android:textSize="20dp" android:textColor="#0f75bc" android:gravity="center" android:id="@+id/view_all_folder" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="View all folders" android:textAllCaps="false" app:layout_constraintEnd_toEndOf="@+id/create_folder_tv" app:layout_constraintStart_toStartOf="@+id/folder_tv" app:layout_constraintTop_toBottomOf="@+id/barrier" app:strokeColor="?attr/colorPrimary" style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <include layout="@layout/files_rv_partial"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <include layout="@layout/floating_action_btns_partial"/>
        <include layout="@layout/upload_file"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView android:layout_gravity="start" android:id="@+id/nav_view" android:layout_width="wrap_content" android:layout_height="match_parent" app:headerLayout="@layout/nav_header" app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
