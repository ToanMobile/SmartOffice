<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
        <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_item_dialog_tag_name" android:layout_width="0dp" android:layout_height="@dimen/margin_50" android:hint="@string/tag_name" android:layout_weight="0.8" android:paddingStart="@dimen/margin_20"/>
        <ImageView android:id="@+id/iv_item_dialog_tag_tick" android:padding="12dp" android:visibility="invisible" android:layout_width="0dp" android:layout_height="@dimen/margin_50" android:src="@drawable/check_100" android:layout_weight="0.2"/>
    </LinearLayout>
    <View android:background="@color/colorGreyLight" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
