<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f2f1f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scrollContent" android:paddingTop="16dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/layoutContent" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginBottom="8dp" android:text="@string/ply_subscription_detail_group_title" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:layout_marginStart="16dp"/>
            <include layout="@layout/ply_item_subscription_list"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="8dp" android:text="@string/ply_subscription_plans_group_title" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:layout_marginStart="16dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/layoutOptions" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="4dp"/>
            <TextView android:textColor="#fe2a1a" android:gravity="center" android:id="@+id/buttonCancelSubscription" android:background="@drawable/ply_background_white_selectable" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/ply_subscription_unsubscribe_button" android:fontFamily="sans-serif-medium" android:paddingStart="10dp" android:paddingEnd="10dp" android:elevation="4dp"/>
        </LinearLayout>
    </ScrollView>
    <androidx.fragment.app.FragmentContainerView android:id="@+id/cancellationFragment" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
