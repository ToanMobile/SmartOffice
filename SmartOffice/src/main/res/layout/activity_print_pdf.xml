<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*">
        <com.google.android.material.appbar.AppBarLayout android:id="@+id/app_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:title="Print PDF Tool"/>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="25dp" android:layout_below="@+id/app_bar">
            <com.dd.morphingbutton.MorphingButton android:id="@+id/selectFile" android:padding="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="30dp" android:text="@string/merge_file_select" android:layout_weight="1" android:fontFamily="@font/sarabunregular" style="@style/MorphingButton"/>
            <TextView android:textSize="16sp" android:textColor="@color/mb_blue" android:layout_gravity="center_vertical" android:id="@+id/view_selected_file" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/view_pdf_text"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_invert_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.dd.morphingbutton.MorphingButton android:id="@+id/invert" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="10dp" android:layout_marginRight="24dp" android:text="@string/print_pdf_btn_text" android:fontFamily="@font/sarabunregular" style="@style/MorphingButton"/>
            <androidx.appcompat.widget.AppCompatButton android:id="@+id/view_pdf" android:background="@color/mb_green" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/view_pdf_text" android:fontFamily="@font/sarabunregular"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
