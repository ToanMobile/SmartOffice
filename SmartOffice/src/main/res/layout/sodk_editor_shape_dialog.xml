<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/sodk_editor_shape" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentBottom="false">
            <com.artifex.sonui.editor.SOTextView android:id="@+id/shape_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/sodk_editor_shape_dialog_title_style"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/row1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:tag="diamond" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_diamond" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="speech1" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_speech_bubble1" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="speech2" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_speech_bubble2" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="pentagon" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_pentagon" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="star" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_star" android:scaleX="0.75" android:scaleY="0.75"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/row2" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:tag="circle" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_circle" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="triangle1" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_triangle1" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="triangle2" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_triangle2" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="arrow1" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_arrow1" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="arrow2" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_arrow2" android:scaleX="0.75" android:scaleY="0.75"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/row3" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:tag="text" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_textbox" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="line" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_line" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="arrow-line" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_line_arrow" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="square" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_square" android:scaleX="0.75" android:scaleY="0.75"/>
                <ImageButton android:tag="rounded-square" android:background="@drawable/sodk_editor_shape_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sodk_editor_icon_shape_rounded_square" android:scaleX="0.75" android:scaleY="0.75"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
