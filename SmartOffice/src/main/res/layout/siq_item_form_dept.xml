<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/siq_form_dept" android:background="?attr/siq_forms_backgroundcolor" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/siq_dept_input_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/siq_dept_text_parent" android:background="@drawable/salesiq_bg_form_idle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="1">
            <TextView android:id="@+id/siq_dept_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/livechat.messages.prechatform.traditional.dept.hint" android:layout_weight="0.9" style="@style/SalesIQ.Style.forms_dept_edittext"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:layout_weight="0.1" android:layout_marginEnd="24dp">
                <ImageView android:id="@+id/siq_dept_dropdown_icon" android:layout_width="15dp" android:layout_height="14dp" android:layout_centerInParent="true" app:srcCompat="@drawable/salesiq_ic_dropdown"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <TextView android:id="@+id/siq_dept_label" android:background="?attr/siq_forms_backgroundcolor" android:text="Department" style="@style/SalesIQ.Style.forms_label_text"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="?attr/siq_forms_mandatory_star_icon_color" android:id="@+id/siq_dept_label_mandatory" android:background="?attr/siq_forms_backgroundcolor" android:paddingRight="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="*" android:paddingEnd="4dp"/>
        </LinearLayout>
    </FrameLayout>
    <TextView android:id="@+id/siq_dept_input_error" android:layout_below="@+id/siq_dept_input_parent" style="@style/SalesIQ.Style.forms_error_text"/>
</RelativeLayout>
